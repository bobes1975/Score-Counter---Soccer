<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Style for card view. -->
    <style name="card">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text30</item>
        <item name="android:text">@string/zero</item>
    </style>

    <!-- Style for Linear Layout for player and cards. -->
    <style name="playerAndCards">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dim16</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <!-- Style for Button +. -->
    <style name="addCard">
        <item name="android:layout_width">@dimen/dim40</item>
        <item name="android:layout_height">@dimen/dim40</item>
        <item name="android:text">@string/plus</item>
        <item name="android:background">@drawable/roundedbutton</item>
        <item name="android:textSize">@dimen/text20</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Style for Goal Button. -->
    <style name="goal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/plus</item>
        <item name="android:textSize">@dimen/text20</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- Style for team name TextView. -->
    <style name="teamName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:padding">@dimen/dim4</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text20</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Style for score TextView. -->
    <style name="score">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/dim4</item>
        <item name="android:text">@string/zero</item>
        <item name="android:textSize">@dimen/text60</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for button Goal. -->
    <style name="addGoal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/goal</item>
    </style>

    <!-- Style for team logo ImageView. -->
    <style name="teamLogo">
        <item name="android:layout_width">@dimen/dim40</item>
        <item name="android:layout_height">@dimen/dim40</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Style for team layout. -->
    <style name="teamStat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/dim16</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
